{
  "compilerOptions": {
    "lib": [
      "dom",
      "esNext"
    ],
    "baseUrl": ".",
    "paths": {
      "@main/*": ["src/*"]
    },
    "outDir": "./dist/",
    "sourceMap": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es6",
    "jsx": "react",
    "typeRoots": ["node_modules/@types", "src/typings"],
    "types" : ["node", "webpack-env"]
  },
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/*.test.tsx",
    "node_modules/@types/jest"
  ]
}
